<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto" 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/onboarding_bg">

    <View
        android:id="@+id/view_leaf_top_align"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_leaf_top"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_leaf_top_align"
        app:layout_constraintStart_toEndOf="@id/view_leaf_top_align"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/onboarding_top_leaf"
        android:adjustViewBounds="true"
        android:contentDescription="@null"/>

    <ImageView
        android:id="@+id/iv_leaf_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/view_leaf_bottom_align"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:src="@drawable/onboarding_bottom_leaf"/>

    <View
        android:id="@+id/view_leaf_bottom_align"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_brave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:textSize="32sp"
        android:visibility="gone"
        android:textColor="@color/onboarding_text_color_new"
        android:text="@string/welcome_to_brave"/>

    <LinearLayout
        android:id="@+id/layout_set_default"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_arrow_down"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:padding="16dp"
        android:visibility="gone"
        android:orientation="vertical"
        android:background="@drawable/rounded_onboarding_text_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/be_brave"
            android:textSize="20sp"
            android:textColor="@color/onboarding_text_color_new"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/be_brave_desc"
            android:textSize="16sp"
            android:textColor="@color/onboarding_text_color_new"/>

        <Button
            android:id="@+id/btn_positive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/blue_48_rounded_bg"
            app:backgroundTint="@null"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="4dp"
            android:minHeight="0dp"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/btn_not_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:text="@string/not_now"
            android:textAllCaps="false"
            android:textColor="@color/onboarding_button_color"
            android:textSize="16sp"
            android:visibility="gone"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_set_default"
        app:layout_constraintBottom_toTopOf="@id/iv_brave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_onboarding_arrow_down"
        android:contentDescription="@null"/>

    <ImageView
        android:id="@+id/iv_brave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_arrow_down"
        app:layout_constraintBottom_toTopOf="@id/layout_p3a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:adjustViewBounds="true"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_brave_onboarding"
        android:contentDescription="@null"/>

    <LinearLayout
        android:id="@+id/layout_p3a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_brave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:orientation="horizontal"
        android:background="@drawable/rounded_onboarding_p3a_bg">

        <android.widget.CheckBox
            android:id="@+id/checkbox_p3a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/brave_checkbox"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tv_p3a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/p3a_onboarding_text_new"
            android:textSize="14sp"
            android:textColor="@color/onboarding_text_color_new"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
